<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_white_fill_10"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/btn_gallery_select"
            style="@style/Theme.AppCompat.TextView.Medium.Gray10.Size18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/gallery_select_photo"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray04"
            app:layout_constraintTop_toBottomOf="@id/btn_gallery_select" />

        <TextView
            android:id="@+id/btn_camera_select"
            style="@style/Theme.AppCompat.TextView.Medium.Gray10.Size18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/camera_select_photo"
            app:layout_constraintTop_toBottomOf="@id/line" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/close_btn"
        style="@style/Theme.AppCompat.TextView.Medium.Gray10.Size18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rect_white_fill_10"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/edit_profile_image_close"
        app:layout_constraintTop_toBottomOf="@id/layout_main" />


</androidx.constraintlayout.widget.ConstraintLayout>
