<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.happy.friendogly.presentation.ui.woof.viewmodel.WoofViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.woof.WoofFragment">

        <com.naver.maps.map.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/layout_playground_detail"
            playgroundDetailVisibility="@{vm.myPlayground}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/bottom_sheet_playground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_white_fill_20"
                android:elevation="10dp"
                android:orientation="vertical"
                android:paddingHorizontal="14dp"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

                <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_playground"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_playground_pet_detail" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_playground"
                    style="@style/Theme.AppCompat.TextView.SemiBold.White.Size20"
                    playgroundAction="@{vm}"
                    playgroundBtn="@{vm.myPlayground}"
                    playgroundBtnVisibility="@{vm.playgroundInfo}"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/rect_coral400_fill_16"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <TextView
            android:id="@+id/btn_woof_footprint_refresh"
            style="@style/Theme.AppCompat.TextView.SemiBold.Coral400.Size14"
            refreshBtnVisibility="@{vm.refreshBtnVisible}"
            uiState="@{vm.uiState}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_white_fill_30"
            android:drawablePadding="6dp"
            android:elevation="4dp"
            android:gravity="center"
            android:onClick="@{() -> vm.clickRefreshBtn()}"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/woof_footprint_refresh"
            android:visibility="invisible"
            app:drawableStartCompat="@drawable/ic_refresh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_woof_back"
            style="@style/Theme.AppCompat.TextView.SemiBold.White.Size14"
            registeringVisibility="@{vm.uiState}"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_coral400_fill_12"
            android:elevation="10dp"
            android:gravity="center"
            android:onClick="@{() -> vm.clickBackBtn()}"
            android:src="@drawable/ic_arrow_left_white"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_woof_close"
            style="@style/Theme.AppCompat.TextView.SemiBold.White.Size14"
            registeringVisibility="@{vm.uiState}"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rect_coral400_fill_12"
            android:elevation="10dp"
            android:gravity="center"
            android:onClick="@{() -> vm.clickCloseBtn()}"
            android:src="@drawable/ic_close_white"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_woof_location"
            locationBtnMargin="@{vm.myPlayground}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.naver.maps.map.widget.LocationButtonView
                android:id="@+id/lbv_woof_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/btn_woof_location"
            locationBtnMargin="@{vm.myPlayground}"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:onClick="@{() -> vm.clickLocationBtn()}"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/btn_woof_my_playground"
            style="@style/Theme.AppCompat.TextView.SemiBold.White.Size14"
            uiState="@{vm.uiState}"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rect_coral400_fill_12"
            android:gravity="center"
            android:onClick="@{() -> vm.clickMyPlaygroundBtn()}"
            android:text="@string/woof_my_footprint"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/btn_woof_location"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="gone" />

        <ImageButton
            android:id="@+id/btn_playground_pet_existence"
            petExistenceBtnVisibility="@{vm.myPlayground}"
            uiState="@{vm.uiState}"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="20dp"
            android:background="@color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> vm.clickPetExistenceBtn()}"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_mark_footprint_btn"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/iv_woof_register_marker"
            registeringVisibility="@{vm.uiState}"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="46dp"
            android:src="@drawable/ic_marker_ongoing_clicked"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_woof_register_location"
            registerLocationBtnVisibility="@{vm.uiState}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="12dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/layout_woof_register_marker"
            app:layout_constraintStart_toStartOf="parent">

            <com.naver.maps.map.widget.LocationButtonView
                android:id="@+id/lbv_woof_register_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/btn_woof_register_location"
            registerLocationBtnVisibility="@{vm.uiState}"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="12dp"
            android:onClick="@{() -> vm.clickLocationBtn()}"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/layout_woof_register_marker"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageButton
            android:id="@+id/btn_playground_registering_help"
            helpBtnVisibility="@{vm.uiState}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rect_coral10_fill_50"
            android:elevation="10dp"
            android:onClick="@{() -> vm.clickHelpBtn()}"
            android:padding="6dp"
            android:src="@drawable/ic_help_coral500"
            app:layout_constraintBottom_toTopOf="@id/layout_woof_register_marker"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_woof_register_marker"
            registeringVisibilityAnimation="@{vm.uiState}"
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:layout_margin="12dp"
            android:background="@drawable/rect_white_fill_30"
            android:elevation="10dp"
            android:paddingHorizontal="6dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="gone">

            <TextView
                android:id="@+id/tv_woof_register_walk_area"
                style="@style/Theme.AppCompat.TextView.SemiBold.Orange.Size26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="@string/woof_register_playground_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_woof_address"
                style="@style/Theme.AppCompat.TextView.SemiBold.Black.Size18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                android:text="@{vm.addressLine}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_woof_register_walk_area"
                tools:text="서울 송파구 올림픽로35다길 42서울 송파구 올림픽로35다길 42" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_woof_register_footprint"
                style="@style/Theme.AppCompat.TextView.SemiBold.White.Size20"
                cameraIdle="@{vm.registerPlaygroundBtn.cameraIdle}"
                uiState="@{vm.uiState}"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rect_coral400_fill_16"
                android:onClick="@{() -> vm.clickRegisterMarkerBtn()}"
                android:text="@string/woof_register_playground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/layout_woof_loading"
            loadingVisibility="@{vm.uiState}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lottie_layout"
            android:clickable="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_woof_loading"
                loadingAnimation="@{vm.uiState}"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:lottie_fileName="animation_loading.json"
                app:lottie_loop="true" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
