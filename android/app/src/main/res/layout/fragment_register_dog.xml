<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.woowacourse.friendogly.presentation.ui.registerdog.RegisterDogViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_register_dog_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_register_dog_title"
                style="@style/Theme.AppCompat.TextView.Medium.Black.Size18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:text="@string/register_dog_toolbar_title"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_left" />


            <ImageView
                android:id="@+id/iv_add_dog_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:src="@drawable/ic_add_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />


            <TextView
                android:id="@+id/tv_dog_image_title"
                style="@style/Theme.AppCompat.TextView.Regular.Black.Size14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="댕댕이 사진을 추가하세요"
                app:layout_constraintEnd_toEndOf="@+id/iv_add_dog_image"
                app:layout_constraintStart_toStartOf="@+id/iv_add_dog_image"
                app:layout_constraintTop_toBottomOf="@+id/iv_add_dog_image" />


            <ImageView
                android:id="@+id/iv_dog_image"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:adjustViewBounds="true"
                app:dogProfile="@{vm.uiState.profileImage}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:onSingleClick="@{() -> vm.selectDogProfileImage()}" />

            <TextView
                android:id="@+id/tv_dog_name_title"
                style="@style/Theme.AppCompat.TextView.Regular.Black.Size14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="@string/dog_name_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_dog_image" />


            <EditText
                android:id="@+id/et_user_name"
                style="@style/Theme.AppCompat.TextView.Profile.EditText.Contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:background="@drawable/rect_gray03_fill_16"
                android:hint="@string/register_dog_name_hint"
                android:maxLength="15"
                android:maxLines="1"
                android:text="@={vm.dogName}"
                app:layout_constraintStart_toStartOf="@+id/tv_dog_name_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_dog_name_title" />


            <TextView
                android:id="@+id/tv_dog_name_count"
                style="Theme.AppCompat.TextView.Regular.Gray05.Size16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                app:editTextLength="@{vm.dogName}"
                app:layout_constraintBottom_toBottomOf="@+id/et_user_name"
                app:layout_constraintEnd_toEndOf="@+id/et_user_name"
                app:layout_constraintTop_toTopOf="@+id/et_user_name"
                tools:text="0/15" />


            <TextView
                android:id="@+id/tv_one_liner_title"
                style="@style/Theme.AppCompat.TextView.Regular.Black.Size14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="@string/one_liner_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_user_name" />

            <EditText
                android:id="@+id/et_tv_one_liner"
                style="@style/Theme.AppCompat.TextView.Profile.EditText.Contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:background="@drawable/rect_gray03_fill_16"
                android:hint="@string/one_liner_hint"
                android:maxLength="15"
                android:maxLines="1"
                android:text="@={vm.oneLiner}"
                app:layout_constraintStart_toStartOf="@+id/tv_dog_name_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_one_liner_title" />

            <TextView
                android:id="@+id/tv_one_liner_count"
                style="Theme.AppCompat.TextView.Regular.Gray05.Size16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                app:editTextLength="@{vm.oneLiner}"
                app:layout_constraintBottom_toBottomOf="@+id/et_tv_one_liner"
                app:layout_constraintEnd_toEndOf="@+id/et_tv_one_liner"
                app:layout_constraintTop_toTopOf="@+id/et_tv_one_liner"
                tools:text="0/15" />


            <TextView
                android:id="@+id/tv_dog_size"
                style="@style/Theme.AppCompat.TextView.Regular.Black.Size14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="댕댕이 사이즈"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_tv_one_liner" />

            <RadioGroup
                android:id="@+id/radio_group_dog_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dog_size">

                <RadioButton
                    android:id="@+id/rb_small"
                    style="@style/Theme.AppCompat.TextView.Regular.Black.Size12"
                    android:layout_width="76dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/sel_regsiterdog_color_dog_option"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="소형견" />

                <RadioButton
                    android:id="@+id/rb_medium"
                    style="@style/Theme.AppCompat.TextView.Regular.Black.Size12"
                    android:layout_width="76dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/sel_regsiterdog_color_dog_option"
                    android:button="@null"
                    android:gravity="center"
                    android:text="중형견" />

                <RadioButton
                    android:id="@+id/rb_large"
                    style="@style/Theme.AppCompat.TextView.Regular.Black.Size12"
                    android:layout_width="76dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/sel_regsiterdog_color_dog_option"
                    android:button="@null"
                    android:gravity="center"
                    android:text="대형견" />


            </RadioGroup>


            <TextView
                android:id="@+id/tv_dog_gender"
                style="@style/Theme.AppCompat.TextView.Regular.Black.Size14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="댕댕이 성별"
                app:layout_constraintStart_toStartOf="@+id/radio_group_dog_size"
                app:layout_constraintTop_toBottomOf="@+id/radio_group_dog_size" />

            <RadioGroup
                android:id="@+id/group_color2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dog_gender">

                <RadioButton
                    android:id="@+id/rb_male"
                    style="@style/Theme.AppCompat.TextView.Regular.Black.Size12"
                    android:layout_width="76dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/sel_regsiterdog_color_dog_option"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="수컷" />

                <RadioButton
                    android:id="@+id/rb_female"
                    style="@style/Theme.AppCompat.TextView.Regular.Black.Size12"
                    android:layout_width="76dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/sel_regsiterdog_color_dog_option"
                    android:button="@null"
                    android:gravity="center"
                    android:text="암컷" />

                <RadioButton
                    style="@style/Theme.AppCompat.TextView.Regular.Black.Size12"
                    android:layout_width="76dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/sel_regsiterdog_color_dog_option"
                    android:button="@null"
                    android:gravity="center"
                    android:text="중성화 수컷" />

                <RadioButton
                    style="@style/Theme.AppCompat.TextView.Regular.Black.Size12"
                    android:layout_width="76dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/sel_regsiterdog_color_dog_option"
                    android:button="@null"
                    android:gravity="center"
                    android:text="중성화 수컷" />

            </RadioGroup>

            <TextView
                android:id="@+id/tv_edit_btn"
                style="@style/Theme.AppCompat.TextView.Medium.Black.Size14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:onClick="@{() -> vm.registerDog()}"
                android:padding="18dp"
                android:text="등록완료!"
                app:editBtnBackgroundTextColor="@{vm.dogName}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/group_color2"
                tools:background="@color/blue" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>
