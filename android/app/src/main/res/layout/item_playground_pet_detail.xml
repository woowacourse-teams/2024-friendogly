<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="petDetailInfo"
            type="com.happy.friendogly.presentation.ui.woof.uimodel.PetDetailInfoUiModel" />

        <variable
            name="actionHandler"
            type="com.happy.friendogly.presentation.ui.woof.action.WoofActionHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_woof_foot_print"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="14dp"
        android:background="@drawable/rect_white_fill_30"
        android:elevation="10dp"
        android:paddingVertical="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_woof_dog"
            glide="@{petDetailInfo.petDetail.imageUrl}"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="14dp"
            android:onClick="@{() -> actionHandler.clickFootprintPetImage(petDetailInfo.petDetail.imageUrl)}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundBig"
            tools:src="@drawable/img_dog" />

        <TextView
            android:id="@+id/tv_woof_dog_name"
            style="@style/Theme.AppCompat.TextView.SemiBold.Black.Size22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@{petDetailInfo.petDetail.name}"
            app:layout_constraintStart_toEndOf="@id/iv_woof_dog"
            app:layout_constraintTop_toTopOf="@id/iv_woof_dog"
            tools:text="땡이" />

        <TextView
            android:id="@+id/tv_woof_dog_age"
            style="@style/Theme.AppCompat.TextView.SemiBold.Gray08.Size18"
            petAge="@{petDetailInfo.petDetail.birthDate}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_woof_dog_name"
            app:layout_constraintStart_toEndOf="@id/tv_woof_dog_name"
            tools:text="11살" />

        <TextView
            android:id="@+id/tv_woof_dog_state"
            style="@style/Theme.AppCompat.TextView.Regular.White.Size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:background="@drawable/rect_green400_fill_20"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="노는중"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_woof_dog_name" />

        <TextView
            android:id="@+id/tv_woof_dog_size"
            style="@style/Theme.AppCompat.TextView.Regular.White.Size14"
            petSizeType="@{petDetailInfo.petDetail.sizeType}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rect_coral300_fill_10"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            app:layout_constraintStart_toStartOf="@id/tv_woof_dog_name"
            app:layout_constraintTop_toBottomOf="@id/tv_woof_dog_name"
            tools:text="소형견" />

        <TextView
            android:id="@+id/tv_woof_dog_gender"
            style="@style/Theme.AppCompat.TextView.Regular.White.Size14"
            petGender="@{petDetailInfo.petDetail.gender}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rect_coral300_fill_10"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            app:layout_constraintStart_toEndOf="@id/tv_woof_dog_size"
            app:layout_constraintTop_toBottomOf="@id/tv_woof_dog_name"
            tools:text="암컷" />

        <TextView
            android:id="@+id/tv_woof_dog_description"
            style="@style/Theme.AppCompat.TextView.Regular.Gray09.Size12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rect_gray150_fill_8"
            android:maxLines="1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="@{petDetailInfo.petDetail.description}"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_pen"
            app:layout_constraintEnd_toEndOf="@id/tv_woof_dog_state"
            app:layout_constraintStart_toStartOf="@id/tv_woof_dog_name"
            app:layout_constraintTop_toBottomOf="@id/tv_woof_dog_gender"
            tools:text="땡이는 사람을 좋아해요!" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>