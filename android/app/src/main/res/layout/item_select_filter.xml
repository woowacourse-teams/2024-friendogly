<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="actionHandler"
            type="com.happy.friendogly.presentation.ui.group.list.GroupListActionHandler" />

        <variable
            name="groupFilter"
            type="com.happy.friendogly.presentation.ui.group.model.groupfilter.GroupFilter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        onSingleClick="@{()->actionHandler.removeFilter(groupFilter)}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/rect_orange100_fill_12"
        android:paddingHorizontal="8dp"
        android:paddingVertical="3dp">

        <TextView
            android:id="@+id/tv_group_list_filter_name"
            style="@style/Theme.AppCompat.TextView.Regular.Black.Size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:text="@{groupFilter.filterName}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="중형견" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_group_list_filter_name"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
