<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.woowacourse.friendogly.presentation.ui.group.list.GroupListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <View
            android:id="@+id/view_group_list_top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/view_group_list_top_bar"
            app:layout_constraintStart_toStartOf="@id/view_group_list_top_bar"
            app:layout_constraintTop_toTopOf="@id/view_group_list_top_bar">

            <TextView
                style="@style/Theme.AppCompat.TextView.Bold.Black.Size18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="잠실6동" />

            <Space
                android:layout_width="6dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_bottom" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_alarm"
            app:layout_constraintBottom_toBottomOf="@id/view_group_list_top_bar"
            app:layout_constraintEnd_toEndOf="@id/view_group_list_top_bar"
            app:layout_constraintTop_toTopOf="@id/view_group_list_top_bar" />

        <include
            app:vm = "@{vm}"
            android:id="@+id/include_group_list_filter"
            layout="@layout/include_group_selector"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_group_list_top_bar" />

        <ImageButton
            onSingleClick="@{()->vm.addGroup()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_circle_white"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_group_add_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
