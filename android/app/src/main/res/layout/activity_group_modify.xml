<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.group.modify.GroupModifyActivity">

    <data>
        <variable
            name="vm"
            type="com.happy.friendogly.presentation.ui.group.modify.GroupModifyViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/view_group_add_top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_group__back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/ripple_circle_white"
            android:onClick="@{()->vm.cancelModify()}"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="@id/view_group_add_top_bar"
            app:layout_constraintStart_toStartOf="@id/view_group_add_top_bar"
            app:layout_constraintTop_toTopOf="@id/view_group_add_top_bar" />

        <TextView
            style="@style/Theme.AppCompat.TextView.SemiBold.Black.Size16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_list_add_title"
            app:layout_constraintBottom_toBottomOf="@id/view_group_add_top_bar"
            app:layout_constraintEnd_toEndOf="@id/view_group_add_top_bar"
            app:layout_constraintStart_toStartOf="@id/view_group_add_top_bar"
            app:layout_constraintTop_toTopOf="@id/view_group_add_top_bar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
