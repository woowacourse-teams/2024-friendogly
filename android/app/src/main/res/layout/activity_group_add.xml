<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.happy.friendogly.presentation.ui.group.add.GroupAddViewModel" />
        <variable
            name="actionHandler"
            type="com.happy.friendogly.presentation.ui.group.add.GroupAddActionHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        tools:context=".presentation.ui.group.add.GroupAddActivity">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_group_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/view_group_add_top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_group_add_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/ripple_circle_white"
            android:onClick="@{()->actionHandler.cancelAddGroup()}"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="@id/view_group_add_top_bar"
            app:layout_constraintStart_toStartOf="@id/view_group_add_top_bar"
            app:layout_constraintTop_toTopOf="@id/view_group_add_top_bar" />

        <TextView
            style="@style/Theme.AppCompat.TextView.SemiBold.Black.Size16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_list_add_title"
            app:layout_constraintBottom_toBottomOf="@id/view_group_add_top_bar"
            app:layout_constraintEnd_toEndOf="@id/view_group_add_top_bar"
            app:layout_constraintStart_toStartOf="@id/view_group_add_top_bar"
            app:layout_constraintTop_toTopOf="@id/view_group_add_top_bar" />

        <ProgressBar
            android:id="@+id/progressbar_add_group"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginBottom="5dp"
            android:indeterminate="false"
            android:max="100"
            style="@style/group_add_custom_progressbar"
            app:currentPageProgress="@{vm.currentPage}"
            app:layout_constraintBottom_toTopOf="@id/tv_group_add_prev_button" />

        <TextView
            onSingleClick="@{()->actionHandler.navigatePrevPage()}"
            android:id="@+id/tv_group_add_prev_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rect_orange100_fill_12"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/group_list_prev_btn"
            style="@style/Theme.AppCompat.TextView.SemiBold.Black.Size16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_group_add_next_button"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            onSingleClick="@{()->actionHandler.navigateNextPage()}"
            android:id="@+id/tv_group_add_next_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            style="@style/Theme.AppCompat.TextView.SemiBold.Black.Size16"
            android:background="@drawable/rect_orange100_fill_12"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/group_list_next_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/tv_group_add_prev_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
