<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_white_fill_radius10"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/user_declare_btn"
            style="@style/Theme.AppCompat.TextView.SemiBold.Gray10.Size18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/user_declare"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line_user_declare"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray300"
            app:layout_constraintTop_toBottomOf="@id/user_declare_btn" />

        <TextView
            android:id="@+id/report_btn"
            style="@style/Theme.AppCompat.TextView.SemiBold.Gray10.Size18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/report"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/line_user_declare" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/iv_close"
        style="@style/Theme.AppCompat.TextView.SemiBold.Gray10.Size18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rect_white_fill_radius10"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/close"
        app:layout_constraintTop_toBottomOf="@id/layout_main" />


</androidx.constraintlayout.widget.ConstraintLayout>
