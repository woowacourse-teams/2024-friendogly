<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">
    <View
        android:id="@+id/group_line"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="5dp"
        android:background="@color/gray03"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filter_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/group_main_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_line"
        tools:listitem="@layout/item_filter" />

    <ImageView
        android:id="@+id/group_main_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:background="@drawable/custom_background_white_radius4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_list" />

    <TextView
        android:id="@+id/group_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/group_main_image"
        app:layout_constraintTop_toBottomOf="@id/filter_list"
        tools:text="모집중" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/group_state"
        app:layout_constraintTop_toBottomOf="@id/filter_list"
        tools:text="모임해요~" />

    <TextView
        android:id="@+id/group_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/group_main_image"
        app:layout_constraintTop_toBottomOf="@id/group_state"
        tools:text="공지 꼭 읽어주세요!" />

    <ImageView
        android:id="@+id/user_list_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_user_list"
        app:layout_constraintBottom_toTopOf="@id/user_info"
        app:layout_constraintStart_toEndOf="@id/group_main_image"
        app:layout_constraintTop_toBottomOf="@id/group_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toTopOf="@id/user_info"
        app:layout_constraintStart_toEndOf="@id/user_list_icon"
        app:layout_constraintTop_toBottomOf="@id/group_content"
        tools:text="2/4명 참여" />

    <TextView
        android:id="@+id/user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/group_main_image"
        app:layout_constraintTop_toBottomOf="@id/user_list_icon"
        tools:text="벼리 · 잠실6동 " />

    <TextView
        android:id="@+id/group_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_list_icon"
        tools:text="3분 전" />
</androidx.constraintlayout.widget.ConstraintLayout>
