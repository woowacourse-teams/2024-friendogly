<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_chat_join_people"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Circle"
        tools:src="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/iv_chat_join_people_leader"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_leader"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="@id/iv_chat_join_people"
        app:layout_constraintTop_toTopOf="@id/iv_chat_join_people" />

    <TextView
        android:id="@+id/tv_chat_join_people_is_me"
        style="@style/Theme.AppCompat.TextView.Regular.White.Size10"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/circle_chat_mine_tv"
        android:gravity="center"
        android:text="@string/chat_mine"
        app:layout_constraintBottom_toBottomOf="@id/iv_chat_join_people"
        app:layout_constraintStart_toEndOf="@id/iv_chat_join_people"
        app:layout_constraintTop_toTopOf="@id/iv_chat_join_people" />

    <TextView
        android:id="@+id/tv_chat_join_people_nickname"
        style="@style/Theme.AppCompat.TextView.Regular.Black.Size16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_chat_join_people"
        app:layout_constraintStart_toEndOf="@id/tv_chat_join_people_is_me"
        app:layout_constraintTop_toTopOf="@id/iv_chat_join_people"
        app:layout_goneMarginStart="10dp"
        tools:text="벼리벼리" />

</androidx.constraintlayout.widget.ConstraintLayout>

